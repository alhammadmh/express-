<html>
  <head>
    
    <link rel="stylesheet" href="/app.css">
  </head>
  <body> 
    <h1>All</h1>
    <nav>
      <a href="/companys/new">Create a New List</a>
    </nav>
    
    <ul>
    <% for (i in companys) { %>
      <li>
        <%= companys[i].name %>, 
        <%= companys[i].color %> 
      </li>
      <a href="/companys/<%= companys[i]._id  %>">SHOW</a>
      <a href="/companys/<%= companys[i]._id  %>/edit">EDIT</a>
      <form action="/companys/<%= companys[i]._id  %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE"/>
      </form>
      <% } %>
    </ul>
    </body>
</html>